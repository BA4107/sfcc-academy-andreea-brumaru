<form xmlns="http://www.demandware.com/xml/form/2008-04-19" secure="false">
	<group formid="customer">
		<field
			formid="firstname"
			label="label.input.firstname.profile"
			mandatory="true"
			max-length="50"
			missing-error="error.message.required"
			range-error="error.message.50orless"
			type="string" />

		<field
			formid="lastname"
			label="label.input.lastname.profile"
			mandatory="true"
			max-length="50"
			missing-error="error.message.required"
			range-error="error.message.50orless"
			type="string" />

			<field
			formid="adress1"
			label="label.input.address1"
			mandatory="true"
			max-length="50"
			missing-error="error.message.required"
			range-error="error.message.50orless"
			type="string" />
			<field
			formid="adress2"
			label="label.input.address2"
			mandatory="true"
			max-length="50"
			missing-error="error.message.required"
			range-error="error.message.50orless"
			type="string" />

			<field
			formid="country"
			label="label.input.country"
			mandatory="true"
			missing-error="error.message.required"
			range-error="error.message.50orless"
			type="string" />
			<field
			formid="state"
			label="label.input.state"
			mandatory="true"
			missing-error="error.message.required"
			range-error="error.message.50orless"
			type="string" />

			<field
			formid="postalcode"
			label="label.input.postalcode"
			mandatory="true"
			max-length="50"
			missing-error="error.message.required"
			range-error="error.message.50orless"
			type="string" />
			<field
			formid="phone"
			label="label.input.phonenumber"
			mandatory="true"
			max-length="50"
			missing-error="error.message.required"
			range-error="error.message.50orless"
			type="string" />

			<field
			formid="comments"
			label="label.input.comments"
			mandatory="true"
			max-length="150"
			missing-error="error.message.required"
			range-error="error.message.50orless"
			type="string" />
			<field
			formid="cardnumber"
			label="label.input.creditcard.number"
			mandatory="true"
			max-length="50"
			missing-error="error.message.required"
			range-error="error.message.50orless"
			type="string" />
			<field
			formid="cardmonth"
			label="label.input.payment.expirationmonth"
			mandatory="true"
			max-length="50"
			missing-error="error.message.required"
			range-error="error.message.50orless"
			type="string" />
			<field
			formid="cardyear"
			label="label.input.payment.expirationyear"
			mandatory="true"
			max-length="50"
			missing-error="error.message.required"
			range-error="error.message.50orless"
			type="string" />
			<field
			formid="securitycode"
			label="label.input.payment.securitycode"
			mandatory="true"
			max-length="50"
			missing-error="error.message.required"
			range-error="error.message.50orless"
			type="string" />

		<field
			formid="email"
			label="label.input.email.profile"
			mandatory="true"
			max-length="50"
			missing-error="error.message.required"
			parse-error="error.message.parse.email.profile.form"
			range-error="error.message.50orless"
			regexp="^[\w.%+-]+@[\w.-]+\.[\w]{2,6}$"
			value-error="ValueErrorText"
			type="string"/>
			<!-- TODO value-error not comming back from the platform -->
    </group>
</form>
